@model IEnumerable<dynamic>

@{
    var columnNames = ViewBag.ColumnNames as List<string>;
    var successMessage = TempData["Success"] as string;
    var errorMessage = TempData["Error"] as string;
}
<table id="profileTable" class="table display">
    <thead>
        <tr>
            @if (columnNames != null)
            {
                foreach (var columnName in columnNames)
                {
                    <th>@columnName</th>
                }
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @foreach (var prop in item.GetType().GetProperties())
                {
                    <td>@prop.GetValue(item, null)</td>
                }
                <td width="30%">
                    <!-- Nút Sửa -->
                    <button type="button" class="btn btn-warning editButton"
                            data-id="@item.Id"
                            data-name="@item.Name">
                        <i class="ti ti-edit me-1"></i> Sửa
                    </button>
                    <!-- Nút Xóa -->
                    <button type="button" class="btn btn-danger delete-btn" data-id="@item.Id">
                        Xóa
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show auto-dismiss" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show auto-dismiss" role="alert">
        @errorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}



